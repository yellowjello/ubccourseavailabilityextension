{
  "manifest_version": 2,

  "name": "UBC Course Availability Checker",
  "description": "This extension checks the availability of selected UBC courses",
  "version": "1.0",

  "background": {
	"scripts": ["jquery-2.0.3.min.js", "background.js", "tableextractor.js", "watchlist.js", "watchlistutils.js"]
  },
  
  "permissions": [
  "alarms",
  "notifications",
	"storage",
	"background",
    "https://*.ubc.ca/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}